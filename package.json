{
  "name": "changeset-to-markdown",
  "version": "1.0.0",
  "description": "GitHub Action to create a CloudFormation change set and return it as markdown",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "start": "node index.js",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloomsei/changeset-to-markdown.git"
  },
  "keywords": [
    "github",
    "action",
    "cloudformation",
    "changeset",
    "markdown"
  ],
  "author": "Elayne Bloom",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "bugs": {
    "url": "https://github.com/bloomsei/changeset-to-markdown/issues"
  },
  "homepage": "https://github.com/bloomsei/changeset-to-markdown#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@aws-sdk/client-cloudformation": "^3.917.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.32.1",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.52.4",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
